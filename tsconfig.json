{
  "compilerOptions": {
    "strictNullChecks": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": false,
    "typeRoots": ["../node_modules/@types"],
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "lib": ["es2015", "dom"],
    "outDir": "./dist",
    "declaration": true,
    "skipLibCheck": true
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules"]
}
